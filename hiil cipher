#include<stdio.h>
#include<string.h>
int main()
{
	int i,j,a[10][10],p[10][10],k=0,m[10][10];
	char plain[20];
	printf("enter the plain text: ");
	scanf("%s",&plain);
	printf("text matrix:\n");
		for(i=0;i<2;i++)
	{
		for(j=0;j<2;j++)
	{
		p[i][j]=int(plain[k])-97;
		printf("%d ",p[i][j]);
		k++;
	}
	printf("\n");
}
	printf("enter the key matrix: ");
	for(i=0;i<2;i++)
	{
		for(j=0;j<2;j++)
		{
			scanf("%d",&a[i][j]);
		}
	}

for(i=0;i<2;i++)
{
	for(j=0;j<2;j++)
	{
		m[i][j]=0;
		for(k=0;k<2;k++)
		{
			m[i][j]+=p[i][k]*a[k][j];
		}
	}
}
printf("cipher text: ");
for(i=0;i<2;i++)
{
	for(j=0;j<2;j++)
	{
		printf("%c",char((m[i][j])%26+97));
}}
}
